<!DOCTYPE html>
<html>
<head>
  <title>Adopt-a-Hydrant</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
  <%= render "layouts/header" %>
  <%= yield(:banner) %>
  <div class="body-container">
    <% if notice || alert  %>
      <div class="row-fluid">
        <p><%= notice %></p>
        <p><%= alert %></p>  
      </div>
      <hr>
    <% end %>
    <%= yield %>
    <%= render "layouts/footer" %>
  </div>
  


</body>
</html>
