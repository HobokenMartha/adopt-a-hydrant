      .span2
        .stats-number.pull-right
          102
        .clearfix
        .stats-title.pull-right
          Engraved Hydts

    .row-fluid
      .hydrant-view.hydrant-view-active
        .row-fluid
          .span4
            NAME / SID
          .span6
            LOCATION
          .span2.text-right
            .label.label-inverse
              %i.icon-tag.icon-white

      - @hydrants.each do |hydrant|
        .hydrant-view
          .row-fluid
            .span3
              %b= hydrant.name.empty? ? hydrant.sid : hydrant.name
            .span7
              %i.icon-map-marker 
              = hydrant.location
            .span2.text-right
              - if hydrant.user.nil?
                .label
                  %i.icon-minus-sign.icon-white
              - else
                .label.label-warning
                  %i.icon-ok-sign.icon-white
    %p 
    .row-fluid
      %a.pull-right.bttn.red-bttn{:href => "#"} PRINT OUT
