.row-fluid
  / BIG SPAN4
  .span3
    .row-fluid.text-center
      = image_tag "hydrant_avatar.jpg", class: "img-polaroid"
    .row-fluid.text-center
      %p 
        %b= @hydrant.name
        %br/ 
        %i.icon-map-marker
        = @hydrant.location
    .row-fluid{:style => "margin-bottom: 10px !important;"}
      %p
        %a.btn.btn-success.span12 105 kudos
    .row-fluid.text-center
      %p 
        %a.btn.btn-warning.btn-large.span12{:href => "#"} Support Jenny's work
        .help-block
          Buy Jenny a toolkit ($25).
          %br/ 
          Online payment by Paypal.
  / END: BIG SPAN4
  
  / BIG SPAN6
  .span9
    .row-fluid
    Profile
    .well.well-small
      .help-block.pull-right #{time_friendly(@hydrant.adopted_on)}
      <b>#{@hydrant.name}</b> has been adopted by <b>#{@hydrant.user.full_name}</b> on <b></b>.

    %hr/ 
    .well.well-small
      .help-block.pull-right Jan 2013
      %i.icon-ok-sign
      <b>Fire Department of Boston</b> has checked and accreddited Jenny for adopting this hydrant.
    
    %hr/ 
    .well.well-small
      .help-block.pull-right #{time_friendly(Time.now)}
      %i.icon-screenshot 
      <b>Jenny</b> has checked in <b>Nokogiri</b> for the <b>third time</b> 
      %br/ 
      - 3.times do
        = image_tag "hydrant_avatar.jpg", class: "img-polaroid"
      
  / END: BIG SPAN6

%hr/ 
%p#notice= notice

%p
  %b Sid:
  = @hydrant.sid
%p
  %b Name:
  = @hydrant.name
%p
  %b Location:
  = @hydrant.location
%p
  %b Latitude:
  = @hydrant.latitude
%p
  %b Longitude:
  = @hydrant.longitude
%p
  %b User:
  = @hydrant.user_id

= link_to 'Edit', edit_hydrant_path(@hydrant)
\|
= link_to 'Back', hydrants_path
